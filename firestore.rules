rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Only the user can create/update their own profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      
      // Prevent deletion of user profiles
      allow delete: if false;
    }
    
    // Chats collection rules
    match /chats/{chatId} {
      // Check if the current user is a participant in the chat
      function isParticipant() {
        return isAuthenticated() && 
               request.auth.uid in chatId.split('_');
      }
      
      // Allow read/write only if user is a participant
      allow read: if isParticipant();
      allow create, update: if isAuthenticated() && request.auth.uid in chatId.split('_');
      
      // Messages subcollection
      match /messages/{messageId} {
        // Anyone who is a participant in the parent chat can read messages
        // Check if user is part of the chat ID (format: uid1_uid2) OR if listed in participants
        allow read: if isAuthenticated() && (
          request.auth.uid in chatId.split('_') ||
          (exists(/databases/$(database)/documents/chats/$(chatId)) &&
           request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants)
        );
        
        // Anyone authenticated can create a message
        // (will be validated by the chat participant check)
        allow create: if isAuthenticated();
        
        // Sender can update/delete their own message
        // Any participant can add themselves to deletedFor array
        allow update: if isAuthenticated() && (
          request.auth.uid == resource.data.senderId ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedFor']) &&
           request.resource.data.deletedFor.hasAll(resource.data.deletedFor) &&
           request.auth.uid in request.resource.data.deletedFor)
        );
        allow delete: if isAuthenticated() && request.auth.uid == resource.data.senderId;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
